<% link = pagy_link_proc(pagy, 'class="btn btn-warning"') %>
<% unless pagy.pages == 1 %>
  <nav>
    <div class="btn-group btn-group-sm" role="group">
      <% if pagy.prev %>
        <%== link.call(1, '<i class="fas fa-angle-double-left"></i>') %>
        <%== link.call(pagy.prev, '<i class="fas fa-angle-left"></i>') %>
      <% else %>
        <button disabled class="btn btn-warning"><i class="fas fa-angle-double-left"></i></button>
        <button disabled class="btn btn-warning"><i class="fas fa-angle-left"></i></button>
      <% end %>
      <div class="bg-warning text-dark d-flex flex-row align-items-center px-2 pagination-input">
        <span class="mr-1">Page</span>
        <form class="mr-1">
          <input type="number" class="text-center" id="page" name="page" value="<%= pagy.page %>" min="1" max="<%= pagy.pages %>" step="1" onchange="this.form.submit()" />
        </form>
        <span>of <%= pagy.pages %></span>
      </div>
      <% if pagy.next %>
        <%== link.call(pagy.next, '<i class="fas fa-angle-right"></i>') %>
        <%== link.call(pagy.last, '<i class="fas fa-angle-double-right"></i>') %>
      <% else %>
        <button disabled class="btn btn-warning"><i class="fas fa-angle-right"></i></button>
        <button disabled class="btn btn-warning"><i class="fas fa-angle-double-right"></i></button>
      <% end %>
    </div>
  </nav>
<% end %>